{
  "name": "lint-coord-e-com",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "lint": "run-p lint:*",
    "lint:textlint": "textlint 'post/**/*.md'",
    "lint:prettier": "prettier --check .",
    "fix": "run-s fix:prettier fix:textlint",
    "fix:textlint": "npm run lint:textlint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write"
